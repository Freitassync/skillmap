# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# For Docker: postgresql://skillmap:skillmap123@postgres:5432/skillmap
# For local PostgreSQL: postgresql://skillmap:skillmap123@localhost:5432/skillmap
DATABASE_URL=postgresql://skillmap:skillmap123@postgres:5432/skillmap

# JWT Secret (MUST change in production!)
JWT_SECRET=dev-secret-change-in-production-12345

# OpenAI API (get your key at https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-proj-your-api-key-here

# CORS Origins (comma-separated list of allowed origins)
# Expo dev server ports: 8081, 19000, 19006
# Add your production frontend URL when deploying
# For local network access, add: http://192.168.0.0/16
CORS_ORIGINS=http://localhost:8081,http://localhost:19000,http://localhost:19006,http://192.168.0.0/16
