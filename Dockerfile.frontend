# Build React Native Web app
FROM node:20-alpine AS build
WORKDIR /app

# Copy package files
COPY package*.json ./
RUN npm ci

# Copy source code
COPY . .

# Build-time environment variables for the frontend
ARG API_BASE_URL=http://localhost:3000/api
ENV API_BASE_URL=${API_BASE_URL}

# Update app.json with environment variables
RUN node -e "const fs = require('fs'); \
const config = JSON.parse(fs.readFileSync('app.json', 'utf8')); \
if (!config.expo.extra) config.expo.extra = {}; \
config.expo.extra.apiBaseUrl = process.env.API_BASE_URL; \
fs.writeFileSync('app.json', JSON.stringify(config, null, 2));"

# Build for web with Expo
RUN npx expo export -p web

# Production stage - Serve with Nginx
FROM nginx:alpine

# Copy custom nginx config for SPA routing
RUN echo 'server { \
    listen 80; \
    server_name localhost; \
    root /usr/share/nginx/html; \
    index index.html; \
    \
    # Try the exact file, then fall back to index.html for SPA routing \
    location / { \
        try_files $uri $uri/ /index.html; \
    } \
    \
    # Handle 404 by serving index.html \
    error_page 404 /index.html; \
    \
    # Enable gzip compression \
    gzip on; \
    gzip_vary on; \
    gzip_min_length 1024; \
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript; \
    \
    # Cache static assets \
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ { \
        expires 1y; \
        add_header Cache-Control "public, immutable"; \
    } \
}' > /etc/nginx/conf.d/default.conf

# Copy built app from Expo export
COPY --from=build /app/dist /usr/share/nginx/html

# Expose port 80
EXPOSE 80
